<%- include('../partials/header') %>
<%- include('../partials/sidenav') %>



            <div class="page-body">
                <div class="container-fluid">
    <div class="row page-title">
        <div class="col-sm-6">
            <h3>Rooms Management</h3>
        </div>
        <div class="col-sm-6">
            <nav>
                <ol class="breadcrumb justify-content-sm-end align-items-center">
                    <li class="breadcrumb-item"> <a href="/">
                            <svg class="svg-color">
                                <use href="/icons/iconly-sprite.svg#Home"></use>
                            </svg></a></li>
                    <li class="breadcrumb-item"><a href="/rooms" style="color: #43b9b299;">Rooms Management</a></li>
                    <li class="breadcrumb-item active">Edit Room</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card height-equal">
                <div class="card-header">
                    <h4>Edit Room</h4>
                </div>
                <div class="card-body">
                    <% if(typeof room !== 'undefined'){ %>
                    <form class="row g-3 custom-input" id="tagForm" action="/rooms/<%= room.id %> " method="POST">
                        <input type="hidden" name="_token" value="GNF8HVQ1jLKbedjPaOj3SsGWKwhykKifaaxEpzUp" autocomplete="off">                        
                        <input type="hidden" name="_method" value="PUT">                        
                        <div class="col-6">
    
                            <label class="form-label" for="">Room Name/Number<span> *</span></label>
                            <input class="form-control" type="text" value="<%= room.number %>" placeholder="Enter Tag Name" name="number" required>
                        </div>
                        <div class="col-6">
                            <label class="form-label" for="">Type</label>
                            <select required name="type" class="form-select"> 
                                <option value="<%= room.type %>"><%= room.type.charAt(0).toUpperCase() + room.type.slice(1) %></option>  

                                <% if(typeof roomTypes !== 'undefined'){ %>
                                    <% roomTypes.forEach(roomType => { %>

                                <option value="<%= roomType.type %>"><%= roomType.type.charAt(0).toUpperCase() + roomType.type.slice(1) %> </option>
                               
                      
                            <% }) %>
                            <% }%>
                        </select>
                            
                        </div>

                    <div class="col-6">
                        <label class="form-label" for="">Price <span> *</span></label>
                        <input class="form-control" type="number" value="<%= room.price %>" placeholder="Enter Price" name="price" required onkeydown="return event.key !== 'e' && event.key !== 'E'">
                    </div>
                    <div class="col-6">
                        <label class="form-label" for="">Status <span> *</span></label>
                        <select class="form-select js-example-basic-single" name="status" required>
                            <option value="<%= room.status %>"><%= room.status %></option>
                            <option value="1">Active</option>
                            <option value="0"  >Deactive</option>
                        </select>
                    </div>
<div class="mt-3 text-end">
    <button type="submit" class="btn btn-primary">save</button>
</div> 
                    </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

            </div>
                     
               <!-- footer start-->
               <%- include('../partials/footer') %>


            </div>
          </main>
                 
                  
                  
          <%- include('../partials/script') %>





<script>
    $(document).ready(function() {
        $(document).on('change', '.toggle-status', function() {

            let status = $(this).prop('checked') ? 1 : 0;
            let url = $(this).data('route');
            let clickedToggle = $(this);
            $.ajax({
                type: "PUT",
                url: url,
                data: {
                    status: status,
                    _token: 'GNF8HVQ1jLKbedjPaOj3SsGWKwhykKifaaxEpzUp',
                },
                success: function(data) {
                    clickedToggle.prop('checked', status);
                    toastr.success("Status Updated Successfully");
                },
                error: function(xhr, status, error) {
                    console.log(error)
                }
            });
        });
    });
</script>

<script>
    $(document).ready(function() {
        $('#country_code').select2({
            templateResult: function(data) {
                if (!data.id) {
                    return data.text;
                }
                var $result = $('<span><img src="' + $(data.element).data('image') +
                    '" class="flag-img" /> +' + data.text.trim() + '</span>');
                return $result;
            },
            templateSelection: function(selection) {
                if (selection.text == ' ') {
                    return selection.text;
                }
                return ' + ' + selection.text;
            }
        });
    });
</script>
    <script>
    $(document).ready(function() {
        $('.toastr-message').each(function() {
            var messageType = $(this).data('type');
            var messageText = $(this).text();
            toastr.options = {
                "closeButton": false,
                "progressBar": true,
                "extendedTimeOut": 0,
                "timeOut": 0,
            };

            switch (messageType) {
                case 'success':
                    toastr.success(messageText);
                    break;
                case 'error':
                    toastr.error(messageText);
                    break;
                case 'info':
                    toastr.info(messageText);
                    break;
                case 'warning':
                    toastr.warning(messageText);
                    break;
                default:
                    toastr.info(messageText);
            }
        });
    });
</script>
    

</body>
</html>
