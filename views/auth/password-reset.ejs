
    
    <%- include('partials/header') %>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
          
    <div class="loader-wrapper">
        <div class="loader"></div>
    </div>
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="login-card login-dark">
                    <div>
                        <div><a class="logo" href="/">
                            <img class="img-fluid for-light" src="/images/new-logo.png" alt="looginpage">
                            <img class="img-fluid for-dark m-auto" src="/images/logo_white.png" alt="logo">
                        </a>
                        <div class="login-main">
                            <form class="theme-form" method="POST" action="/password/email">
         
                                <h4 class="f-w-500">Forgot Password</h4>

                                <p>
                                    Please enter your mail id to reset the password
                                </p>
                                <div class="form-group">
                                    <label class="col-form-label">Email Address</label>
                                    <div class="form-input position-relative">
                                        <input class="form-control" placeholder="test@gmail.com" type="email" id="email" name="email" value="test@example.com" required autocomplete="email" autofocus>
                                        <% if(typeof error !== 'undefined'){ %>
                                            <span class="" role="alert">
                                                <strong><%= error %></strong>
                                            </span>
                                            <% } %>
                                                                            </div>
                                </div>
                                <div class="col-12">
                                    <div class="text-end">
                                        <button class="btn btn-primary" type="submit" style="inline-size: -webkit-fill-available;">Send Password Reset Link</button>
                                    </div>
                                </div>
                            </form>

                            <div class="form-group mt-3">
                                <a href="/signin" class="text-center nav-link">
                                    <p>
                                        <i class="fa fa-long-arrow-left"></i>
                                        Back to Login Page
                                    </p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- page-wrapper end-->

  
    <%- include('partials/footer') %>