<%- include('../partials/header') %>
<%- include('../partials/sidenav') %>



            <div class="page-body">
                <div class="container-fluid">
    <div class="row page-title">
        <div class="col-sm-6">
            <h3>Rooms Management</h3>
        </div>
        <div class="col-sm-6">
            <nav>
                <ol class="breadcrumb justify-content-sm-end align-items-center">
                    <li class="breadcrumb-item"> <a href="/">
                            <svg class="svg-color">
                                <use href="/icons/iconly-sprite.svg#Home"></use>
                            </svg></a></li>
                    <li class="breadcrumb-item"><a href="/rooms" style="color: #43b9b299;">Rooms Management</a></li>
                    <li class="breadcrumb-item active">Edit Room</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card height-equal">
                <div class="card-header">
                    <h4>Edit Complaint</h4>
                </div>
                <% if(typeof complaint !== 'undefined'){ %>
                <div class="card-body">
                    <form class="row g-3 custom-input" id="tagForm" action="/complaints/<%=complaint.id %>" method="POST">
                        <input type="hidden" name="_token" value="GNF8HVQ1jLKbedjPaOj3SsGWKwhykKifaaxEpzUp" autocomplete="off">
                        
                        <div class="col-4">
                            <label class="form-label" for="">Title <span> *</span></label>
                            <input class="form-control" type="text" value="<%=complaint.title %>" placeholder="Title" name="title" required>
                        </div>
                        
                        <div class="col-4">
                            <label class="form-label" for="">Room Number/Name</label>
                            
                            <select name="room_number" id="roomSelector" class="form-select">
                                <option value="<%=complaint.room_number %>"><%=complaint.room_number %></option>
                                <% if (typeof rooms !== 'undefined') { %>
                                    <% rooms.forEach(room => { %>
                                        <option data-room-id="<%= room.id %>" value="<%= room.number %>">
                                            <%= room.number.charAt(0).toUpperCase() + room.number.slice(1) %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                            <!-- Hidden input for room_id -->
                            <input type="hidden" id="roomIdInput" name="room_id" value="">
                        </div>

                        <div class="col-4">
                            <label class="form-label" for="">Status</label>
                            
                            <select required name="status" class="form-select">
                                <option value="<%=complaint.status %>">  <%= complaint.status.charAt(0).toUpperCase() + complaint.status.slice(1) %></option>
                               
                                <option value="pending"> Pending </option>
                                <option value="processing"> Processing </option>
                                <option value="resolved"> Resolved </option>
                                
                            </select>
                    
                        </div>
                    
                        <div class="col-12">
                            <label class="form-label" for="">Message <span> *</span></label>
                            <textarea name="message"  rows="7" class="form-control" required><%=complaint.message %></textarea>
                        </div>
                    
                        <div class="mt-3 text-end">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                    
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

            </div>
                     
               <!-- footer start-->
               <%- include('../partials/footer') %>


            </div>
          </main>
                 
                  
                  
          <%- include('../partials/script') %>

          <script src="/js/custom/complaint.js"></script>

    

</body>
</html>
